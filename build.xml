<project name="AirPushNotification" basedir="." default="compile">
	<property file="build.properties" />
	
	<target name="clean">
		<delete dir="${build}"/>
		<delete dir="${androidBuild}"/>
	</target>

	<target name="init" depends="clean">
		<mkdir dir="${build}"/>
		<mkdir dir="${build}/Android"/>
		<mkdir dir="${build}/Default"/>
		<mkdir dir="${build}/iOS"/>
	</target>	

	<target name="iOSClean" depends="init">
		<exec executable="xcodebuild" dir="NativeIOS" 
			failonerror="true">
		        
			<arg line="-project ${iosProjectName.xcodeproj}"/>
			<arg line="-alltargets clean" />
		            
		</exec>
	</target>	

	<target name="iOSCompile" depends="iOSClean">
		<exec executable="xcodebuild" dir="NativeIOS" 
			failonerror="true"> 
			<arg line="-project ${iosProjectName.xcodeproj}"/>
			<arg line="-sdk iphoneos4.3"/>
			<arg line="-alltargets" />
			<arg line="-configuration Release" />
		            
		</exec>
		
	</target>

	<target name="iOSCopy" depends="iOSCompile">
		<copy file="${lib.a}" todir="${build}/iOS"/>
	</target>


	<target name="androidInit" depends="iOSCopy">
		<mkdir dir="${androidBuild}"/>
	</target>	
	<target name="androidCompile" depends="androidInit">
		<!-- Compile the java code -->
		<javac srcdir="${androidSrc}" destdir="${androidBuild}">
			<classpath>
				<pathelement location="${androidLibs.dir}/FlashRuntimeExtensions.jar"/>
				<pathelement location="${androidLibs.dir}/FlurryAgent.jar"/>
			</classpath>
		</javac>
	</target>	
	<target name="androidUnzip"  depends="androidInit">
			<!-- Build the jar file -->
			<unzip src="${androidLibs.dir}/FlurryAgent.jar" dest="${androidBuild}" />
			<copydir dest="NativeAndroid/bin/classes/com" src="${androidBuild}/com"></copydir>
	</target>
	<target name="androidJar" depends="androidUnzip">
		<!-- Build the jar file -->
		<jar basedir="NativeAndroid/bin/classes" destfile="${build}/Android/${lib.jar}"/>
	</target>


	<target name="unzipSwf" depends="androidJar">
	        <mkdir dir="temp"/>
		<unzip src="${lib.swc}" dest="temp"/>
		<copy file="temp/library.swf" todir="${build}/Android"/>
		<copy file="temp/library.swf" todir="${build}/Default"/>
		<copy file="temp/library.swf" todir="${build}/iOS"/>
		<delete dir="temp"/>
	</target>	


	<target name="compile" depends="unzipSwf">
		<java jar="${adt.jar}" fork="true" failonerror="true">
			<arg value="-package"/>
			<arg value="-target"/>
			<arg value="ane"/>
			<arg value="Binaries/${aneName.ane}"/>
			<arg value="${extension.xml}"/>
			
			<arg value="-swc"/>
			<arg value="${lib.swc}"/>
			
			<arg value="-platform"/> 
			<arg value="Android-ARM"/>
			<arg value="-C"/>
			<arg value="${build}/Android"/>
			<arg value="."/>
			
			<arg value="-platform"/>
			<arg value="iPhone-ARM"/>
			<arg value="-platformoptions"/>
			<arg value="${iOSPlatformOptions}"/>
			<arg value="-C"/>
			<arg value="${build}/iOS"/>
			<arg value="."/>
			
			<arg value="-platform"/>
			<arg value="default"/>
			<arg value="-C"/>
			<arg value="${build}/Default"/>
			<arg value="library.swf"/>
		</java>
	</target>

</project>
        